#!/usr/bin/env node
var http = require("http");

PrinterId = require("../lib/printer-id.js").PrinterId;

var body = "<h1>This is a test print</h1><img src='http://printer.gofreerange.com/images/gfr_logo.png' />";

var request = new http.ClientRequest({
    hostname: "printer.gofreerange.com",
    port: 80,
    path: "/print/" + PrinterId.get(),
    method: "POST",
    headers: {
        "Content-Type": "application/x-www-form-urlencoded",
        "Content-Length": body.length // Often this part is optional
    }
});

request.end("content=" + encodeURIComponent(body));
